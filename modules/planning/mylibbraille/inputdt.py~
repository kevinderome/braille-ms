#!/usr/bin/env python3.4
import brlapi
import os
def brl_input():
    b = brlapi.Connection()
    b.enterTtyMode()
    r = 0
    key = ""
    i = 14
    tmp = 0
    while tmp != 65293:
        b.writeText("aaaa:mm:jj : "+key, i)
        tmp = b.readKey()
        if len(key) > 40:
            ts = key[41:]
            b.writeText(ts, i)
        if tmp <= 255:
            key += chr(tmp)
            i += 1
        elif tmp == 65288:
            key = key[:-1]
            i -= 1
            if len(key) == 0:
                b.writeText(" ", i)
                key = ""
                if i == 14:
                    i = 13
                elif i == 41:
                    return key
    return key.split("-")
