#!/usr/bin/env python3.4
import brlapi
import time

def     get_key():
    b = brlapi.Connection()
    b.enterTtyMode()
    key = b.readKey()
    return key

def     flashb(txt):
    try:
        b = brlapi.Connection()
        b.enterTtyMode()
        b.writeText(str(txt))
        time.sleep(2)
        del(b)
    finally:
        return 0

