#!/usr/bin/python3
import os
import brlapi
import sys
import time
from mylib.manage_event import *
from mylib.braille import *


def main():
    exec = True
    init_event()
    while exec:
        printb("Ajouter  Consulter  RÃ©initialiser      X", 0)
        key = get_key()
        if key == 'a':
            add_event()
        elif key == 'c':
            event_manager()
        elif key == 'r':
            reset_event()
        elif key == 'x' or key == keyboard["last_cursor"]:
            exec = False
    return 0

main()
